<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<package name="member" namespace="/member" extends="struts-default">
		<interceptors>
			<interceptor name="authenticationInterceptor"
				class="nl.plaatsmarkt.interceptors.AuthenticationInterceptorMember" />

			<interceptor-stack name="GebruikersStack">
				<interceptor-ref name="authenticationInterceptor" />
				<interceptor-ref name="defaultStack" />
			</interceptor-stack>
		</interceptors>
		
		<default-interceptor-ref name="GebruikersStack" />	
		
		<global-results>
			<result name="login" type="redirect">
				../Login.action
			</result>
		</global-results>
		
		<action name="MyAccount" class="nl.plaatsmarkt.actions.members.MyAccount">
			<result name="success">/jsp/member/mijnaccount.jsp</result>
		</action>
		
		<action name="MyAccountEdit" class="nl.plaatsmarkt.actions.members.MyAccountEdit">
			<result name="success">/jsp/member/mijnaccountEdit.jsp</result>
			<result name="input">/jsp/member/mijnaccount.jsp</result>
		</action>
		
		<action name="Logout" class="nl.plaatsmarkt.actions.members.Logout">
			<result name="success">/jsp/member/LoggedOut.jsp</result>
		</action>
		
		<action name="welkom">
			<result name="success">/jsp/member/welcome.jsp</result>
		</action>
		
	</package>
</struts>